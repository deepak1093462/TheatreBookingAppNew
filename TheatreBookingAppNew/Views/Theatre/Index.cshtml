@model IEnumerable<TheatreBookingAppNew.Models.TheatreTable>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("Create New User", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TheatreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryPerUser)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TheatreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryPerUser)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TheatreId }, new { @class = "btn btn-primary" }) &nbsp;&nbsp;&nbsp;
                @Html.ActionLink("Details", "Details", new { id = item.TheatreId }, new { @class = "btn btn-success" }) &nbsp;&nbsp;&nbsp;
                @Html.ActionLink("Delete", "Delete", new { id = item.TheatreId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
